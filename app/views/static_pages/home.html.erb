<div class="home-page">
  <div class="container">
    <div class="row-header">
      <div class="col-full">
        <h1>Welcome to Bob's Wishlist Tracker!</h1>
        <% if signed_in? %>
          <% if current_user.friend_requests.size > 0 %>
            <h2>You have pending friend requests! Check them out <%= link_to 'here', user_path( current_user ) %></h2>
          <% else %>
            <h2>Find some friends <%= link_to 'here', users_path %></h2>
          <% end %>
        <% else %>
          <%= link_to 'Sign Up', signup_path, :class => 'btn btn-lg btn-white-on-green' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(window).resize( function() {
    var pageHeight = $(window).height() - $('.wl-header').outerHeight();
    var topPadding = (pageHeight - $('.row-header').outerHeight()) / 2 - 100;
    $('.home-page').css( 'min-height', pageHeight );
    $('.home-page').css( 'padding-top', topPadding );
  });

  $(document).ready( function() { $(window).trigger( 'resize' ) } );
</script>